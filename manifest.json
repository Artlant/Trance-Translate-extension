{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "short_name": "__MSG_extShortName__",
    "description": "__MSG_extDescription__",
    "update_url": "https://clients2.google.com/service/update2/crx",
    "default_locale": "en",
    "version": "0.0.1",
    "author": "raingart",
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "http://*/*", 
        "https://*/*",
        "*://*/*"
    ],
    "background": {
        "scripts": ["js/selection.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_popup": "html/popup.html",
        "default_title1": "__MSG_extTitle__"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}